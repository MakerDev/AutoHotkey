<UserControl x:Class="AutoHotKey.UserInterfaces.ScreenKeyboard.ColorSelector"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             HorizontalAlignment="Left"
             d:DesignHeight="30" d:DesignWidth="180">
    <StackPanel
        Height="28"
        Width="180"
        Orientation="Horizontal">
        <Grid>
            <Rectangle
                Margin="5,3,0,0"
                Width="35"
                Height="20" Fill="#FFB8B8B8"
            />
            <Rectangle
                Name="Rect_Color"
                Width="35"
                Height="20" Stroke="Black" Fill="White"
            />
        </Grid>

        <Label
            Name="Label_ColorPIcked"
            Margin="3,0,0,0"
            Content="#FFFFFFFF" Foreground="Black" FontSize="11"
            />

        <Button
            Click="OnOtherClicked"
            Margin="20,4,0,4"
            Width="30"
            Height="20"
            Padding="0"
            VerticalContentAlignment="Center"
            Content="other" FontSize="10">

        </Button>
    </StackPanel>
</UserControl>
