<Window x:Class="AutoHotKey.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AutoHotKey"
        mc:Ignorable="d"
        Title="MainWindow" Height="470" Width="660"
        ResizeMode="CanMinimize"
        Name="xWindowMain">
    
    <Grid>
        <ScrollViewer 
            Name="scrViewerProfiles"
            HorizontalAlignment="Left" 
            Height="441" 
            VerticalAlignment="Top" 
            Width="330"           
            />
        <StackPanel
              Visibility="Visible"
              HorizontalAlignment="Left" 
              Height="441" Margin="330,0,0,0" 
              VerticalAlignment="Top" 
              Width="324"
              Name="sProfileContent">

            <TextBox Name="tbCurrentProfile"
                     IsReadOnly="True"
                     Text="Profile selected : "
                     HorizontalAlignment ="Center"
                     FontSize="25"
                     Margin="0, 30, 0, 0" BorderThickness="0,3,0,0" FontWeight="Bold"/>
            <StackPanel
                Visibility="Hidden">
                <TextBox 
                    Text=" Combination"
                    FontSize="18"
                    Margin="0, 30, 0, 0" BorderThickness="0,0,0,1" TextDecorations="{x:Null}"
                />

                <StackPanel 
                    Orientation="Horizontal"
                    Margin="0, 8, 0, 0"
                    >
                    <CheckBox x:Name="cbNoMod" Content="NoMod"
                              Margin="7, 0 , 0,0" 
                              Checked="OnCheckBoxChanged" Unchecked="OnCheckBoxChanged"/>
                    <CheckBox x:Name="cbControl" Content="Control"
                              Margin="10, 0 , 0,0"
                              Checked="OnCheckBoxChanged" Unchecked="OnCheckBoxChanged"/>
                    <CheckBox x:Name="cbAlt" Content="Alt"
                              Margin="10, 0 , 0,0"
                              Checked="OnCheckBoxChanged" Unchecked="OnCheckBoxChanged"/>
                    <CheckBox x:Name="cbShift" Content="Shift"
                              Margin="10, 0 , 0,0"
                              Checked="OnCheckBoxChanged" Unchecked="OnCheckBoxChanged"/>
                    <CheckBox x:Name="cbWindow" Content="Window"
                              Margin="10, 0 , 0,0"
                              Checked="OnCheckBoxChanged" Unchecked="OnCheckBoxChanged"/>

                </StackPanel>

                <TextBox 
                    Text=" Key"
                    FontSize="18"
                    Margin="0, 10, 0, 0" BorderThickness="0,0,0,1"
                    />
                <StackPanel 
                    Orientation="Horizontal"
                    Margin="0, 8, 0, 0"
                    >

                    <Label
                        Content="키"
                        FontSize="16"
                        />

                    <TextBox
                        Name="tbKeySet"
                        MaxLength="1"
                        TextWrapping="Wrap" Width="65" 
                        HorizontalAlignment="Center" 
                        VerticalAlignment="Center"
                        KeyDown = "OnKeyInput"
                        />
                    
                    <CheckBox x:Name="xCbDelete" Content="Delete"
                              Margin="10, 0 , 0,0"
                              Checked="OnCheckBoxChanged" Unchecked="OnCheckBoxChanged" 
                              Height="15"/>
                    <CheckBox x:Name="xCbSpace" Content="Space"
                              Margin="10, 0 , 0,0"
                              Checked="OnCheckBoxChanged" Unchecked="OnCheckBoxChanged" 
                              Height="15"/>

                </StackPanel>
            </StackPanel>
            
            <Button Name="xBtnSetProfileChangeKey"
                    Visibility="Hidden"
                    Content="프로필 변경 키 설정"
                    Width="250" Height="35"
                    Margin="0, 10, 0, 0"
                    FontSize="20" Click="OnBtnSetProfileChangeKeyClicked"
                    />

            <Button Name="btnEditProfile"
                    Content="Edit Profile" 
                    Width="250" Height="35" 
                    Margin="0, 50, 0 ,0"
                    FontSize="20" 
                    Click="OnEditProfileCliked"
                    />

            <Button Name="btnDeleteProfile"
                    Content="Delete Profile" 
                    Width="250" Height="35" 
                    Margin="0, 15, 0 ,0"
                    FontSize="20" Click="OnDeleteProfileClicked"
                    />
        </StackPanel>
    </Grid>
</Window>

    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    