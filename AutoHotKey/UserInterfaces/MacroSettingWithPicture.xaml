<Window x:Class="AutoHotKey.UserInterfaces.MacroSettingWithPicture"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AutoHotKey.UserInterfaces"
        mc:Ignorable="d"
        Name="SettingWindow"
        SizeToContent="WidthAndHeight"
        Width="Auto" Height="Auto"
        Title="MacroSetting" ResizeMode="NoResize">

    <Grid
        Width="Auto"
        Height="Auto" MinWidth="1700">

        <Label x:Name="xLabelCurrentProfile" Content="Currnet Profile : None" 
               HorizontalAlignment="Left" 
               Margin="24,14,0,0" 
               VerticalAlignment="Top" Height="63" Width="605" 
               FontWeight="Bold" FontSize="36"/>
        <Button x:Name="xBtnSetProfileChangingKeys" 
                Content="Set Profile-Switching Keys" 
                HorizontalAlignment="Left" 
                Margin="911,28,0,0" 
                VerticalAlignment="Top" 
                Width="313" Height="42" FontSize="20" Click="xBtnSetProfileChangingKeys_Click"/>

        <Frame x:Name="xFrameKeySelection" Margin="0,82,0,0" />

    </Grid>
</Window>
