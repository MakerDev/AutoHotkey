      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AutoHotKey.UserInterfaces"
      mc:Ignorable="d" 
      Width="auto" Height="453.5"
      Title="SelectKeyPage" Background="White" RenderTransformOrigin="0.5,0.5">

    <Page.Resources>
        <Style x:Key="Keyboard" TargetType="Button">
            <Setter Property="Background" Value="White" />
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Opacity" Value="0.2"/>
            <Setter Property="BorderBrush" Value="{x:Null}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border 
                            Name="border" 
                            Background="{TemplateBinding Background}">
                            <Grid 
                                Name="fill">
                                <ContentPresenter
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                     />
                            </Grid>
                        </Border>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="fill" Property="Background" Value="#FF2B6CAC" />
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="fill" Property="Background" Value="#FF0A3A8D" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

